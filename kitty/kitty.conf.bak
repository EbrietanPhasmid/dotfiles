
font_family      IosevkaTermSlab Nerd Font Mono
bold_font        IosevkaTermSlab Nerd Font Mono Bold
italic_font      IosevkaTermSlab Nerd Font Mono Italic
bold_italic_font IosevkaTermSlab Nerd Font Mono Bold Italic
font_size 12.0
hide_window_decorations titlebar-only
window_margin_width 10
cursor_beam_thickness 2.0
cursor_blink_interval 0
cursor_shape_unfocused beam
macos_quit_when_last_window_closed no
macos_colorspace default
macos_show_window_title_in window
repaint_delay 8
input_delay 1
resize_draw_strategy blank
remember_window_size no
resize_debounce_time 0.001
confirm_os_window_close -2

tab_bar_edge top
tab_bar_style powerline
tab_powerline_style slanted
tab_activity_symbol ï‘„
tab_title_max_length 30
tab_title_template "{fmt.fg.red}{bell_symbol}{fmt.fg.tab} {index}: ({tab.active_oldest_exe}) {title} {activity_symbol}"
map cmd+1 goto_tab 1
map cmd+2 goto_tab 2
map cmd+3 goto_tab 3
map cmd+4 goto_tab 4
map cmd+5 goto_tab 5
map cmd+6 goto_tab 6
map cmd+7 goto_tab 7
map cmd+8 goto_tab 8
map cmd+9 goto_tab 9
map cmd+0 goto_tab 10

map cmd+t launch --type=tab --cwd=current
map cmd+n launch --type=os-window --cwd=current 

symbol_map U+F0001-U+F1af0 Hack Nerd Font
symbol_map U+F8FF,U+100000-U+1018C7 SF Pro

# Sonokai
background #262626
foreground #c3b8a3

selection_background #eacb64
selection_foreground #262626

cursor #eacb64
cursor_text_color background

active_tab_background #262626
active_tab_foreground #c3b8a3
active_tab_font_style bold
inactive_tab_background #262626
inactive_tab_foreground #c3b8a3
inactive_tab_font_style normal

# Black
color0 #181a1c
color8 #828a9a

# Red
color1 #ff6578
color9 #ff6578

# Green
color2 #a9b778
color10 #a9b776

# Yellow
color3 #eacb64
color11 #eacb64

# Blue
color4 #72cce8
color12 #72cce8

# Magenta
color5 #ba9cf3
color13 #ba9cf3

# Cyan
color6 #f69c5e
color7 #f69c5e

# White
color7 #e1e3e4
color15 #e1e3e4


# OS Window titlebar colors
wayland_titlebar_color system
macos_titlebar_color system


